<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Tom" id="20190918">
        <renameColumn newColumnName="lastname"
                      oldColumnName="lastName"
                      tableName="account"/>
        <createSequence incrementBy="1"
                        sequenceName="hibernate_sequence"/>

        <createTable tableName="slections">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_matches"/>
            </column>
            <column name="atGoals" type="INT"/>
            <column name="date" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="htGoals" type="INT"/>
            <column name="awayteam_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="hometeam_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="news_id" type="BIGINT"/>
            <column name="season_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="doodle_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="status_text" type="VARCHAR(255)"/>
            <column name="motmpoll_id" type="BIGINT"/>
            <column name="created" type="datetime(6)"/>
            <column name="modified" type="datetime(6)"/>
            <column name="at_goals" type="INT"/>
            <column name="ht_goals" type="INT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
